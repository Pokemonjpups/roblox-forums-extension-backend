{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "es2018",
        "lib": [
            "es2018"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./public",
        "dist",
        "test"
    ]
}